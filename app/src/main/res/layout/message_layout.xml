<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/message_layout"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:visibility="visible">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/create_margin"
            android:layout_marginLeft="@dimen/create_margin"
            android:orientation="vertical">

            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone"
                android:textSize="@dimen/checkbox_text_size"
                android:layout_marginBottom="@dimen/create_margin"
                android:text="@string/export_check_title"
                android:id="@+id/messageExport" />

            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone"
                android:textSize="@dimen/checkbox_text_size"
                android:layout_marginBottom="@dimen/create_margin"
                android:text="@string/add_to_google_tasks"
                android:id="@+id/messageTaskExport" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <ImageButton
                    android:layout_width="@dimen/create_imagebutton_size"
                    android:layout_height="@dimen/create_imagebutton_size"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_person_add_grey600_24dp"
                    android:id="@+id/addMessageNumberButton" />

                <com.cray.software.justreminder.views.FloatingEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:hint="@string/phone_number_hint"
                    android:textSize="@dimen/create_text_size_normal"
                    android:gravity="center"
                    android:ems="10"
                    android:singleLine="true"
                    android:layout_gravity="center"
                    android:id="@+id/messageNumber"
                    android:inputType="text|phone" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:gravity="center_horizontal"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/create_margin"
                android:layout_marginLeft="@dimen/create_margin"
                android:layout_marginRight="@dimen/create_margin"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tue, 5 Nov 2015"
                    android:ems="10"
                    android:gravity="center|left"
                    android:layout_toLeftOf="@+id/messageTime"
                    android:textSize="@dimen/create_text_size_normal"
                    android:id="@+id/messageDate" />

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:gravity="center|right"
                    android:textSize="@dimen/create_text_size_normal"
                    android:text="14:05"
                    android:layout_alignParentRight="true"
                    android:ems="10"
                    android:id="@+id/messageTime" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:gravity="left|center"
                android:layout_marginLeft="@dimen/create_margin"
                android:layout_marginTop="@dimen/create_margin"
                android:layout_marginRight="@dimen/create_margin"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center|left"
                    android:id="@+id/text1"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:text="@string/string_repeat_every"
                    android:textSize="@dimen/create_text_size_normal"/>

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:minWidth="50dp"
                    android:layout_toRightOf="@+id/text1"
                    android:maxLength="3"
                    android:inputType="number"
                    android:gravity="center"
                    android:layout_marginLeft="@dimen/create_margin"
                    android:textSize="@dimen/create_text_size_primary"
                    android:id="@+id/repeatDaysMessage"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center|left"
                    android:layout_centerVertical="true"
                    android:text="@string/remaining_days"
                    android:layout_toRightOf="@+id/repeatDaysMessage"
                    android:textSize="@dimen/create_text_size_normal"/>

            </RelativeLayout>

            <SeekBar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/create_margin"
                android:id="@+id/repeatMessageInt"
                android:layout_marginBottom="88dp"
                android:max="4"/>
        </LinearLayout>
        </ScrollView>
</LinearLayout>