<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:id="@+id/windowBackground"
    tools:context=".ReminderManager">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include layout="@layout/toolbar_reminder"
            android:id="@+id/toolbar"/>

    </android.support.design.widget.AppBarLayout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/wrapper"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context=".ReminderManager">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center|top"
            android:id="@+id/layoutContainer">

            <include layout="@layout/reminder_call_layout"/>
            <include layout="@layout/reminder_weekdays_layout"/>
            <include layout="@layout/reminder_message_layout"/>
            <include layout="@layout/reminder_date_layout"/>
            <include layout="@layout/reminder_time_layout"/>
            <include layout="@layout/reminder_location_layout"/>
            <include layout="@layout/reminder_skype_layout"/>
            <include layout="@layout/reminder_application_layout"/>
            <include layout="@layout/reminder_day_of_month_layout"/>
            <include layout="@layout/reminder_location_out_layout"/>
            <include layout="@layout/reminder_shopping_list_layout"/>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:id="@+id/extraHolder">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:scrollbars="none"
                android:id="@+id/extraScroll">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageButton
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_below="@+id/extraScroll"
                        android:id="@+id/extraVibration"
                        android:src="@drawable/ic_vibration_black_24dp"/>

                    <ImageButton
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_below="@+id/extraScroll"
                        android:id="@+id/extraUnlock"
                        android:src="@drawable/ic_screen_lock_portrait_black_24dp"/>

                    <ImageButton
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_below="@+id/extraScroll"
                        android:id="@+id/extraVoice"
                        android:src="@drawable/ic_multitrack_audio_black_24dp"/>

                    <ImageButton
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_below="@+id/extraScroll"
                        android:id="@+id/extraWake"
                        android:src="@drawable/ic_brightness_high_black_24dp"/>

                    <ImageButton
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_below="@+id/extraScroll"
                        android:id="@+id/extraRepeat"
                        android:src="@drawable/ic_refresh_black_24dp"/>

                    <ImageButton
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_below="@+id/extraScroll"
                        android:id="@+id/extraAuto"
                        android:src="@drawable/ic_textsms_black_24dp"/>

                    <ImageButton
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_below="@+id/extraScroll"
                        android:id="@+id/extraLimit"
                        android:src="@drawable/ic_block_black_24dp"/>

                </LinearLayout>

            </ScrollView>

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/extraScroll"
                android:id="@+id/extraSwitch"
                android:src="@drawable/ic_expand_more_black_24dp"/>

        </RelativeLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/card_bg_dark"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="100dp"
            android:id="@+id/repeatFrame">

            <SeekBar
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:id="@+id/repeatSeek"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:max="100"/>

        </FrameLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_above="@+id/repeatFrame"
            android:id="@+id/repeatLabel"
            android:textSize="70sp"/>

    </RelativeLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:layout_margin="@dimen/fab_margin"
        android:src="@drawable/ic_done_white_24dp" />

</android.support.design.widget.CoordinatorLayout>