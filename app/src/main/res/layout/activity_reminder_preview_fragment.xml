<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ReminderPreviewFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/windowBackground">

    <android.support.v7.widget.Toolbar
        xmlns:android="http://schemas.android.com/apk/res/android"

        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/toolbar"
        android:layout_alignParentTop="true"
        android:minHeight="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/navContainer"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_marginTop="?attr/actionBarSize"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:maxHeight="150dp"
                android:minHeight="72dp"
                android:scrollbars="vertical"
                android:gravity="center|left"
                android:textColor="@color/colorWhite"
                android:id="@+id/task"/>

            </LinearLayout>
    </android.support.v7.widget.Toolbar>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fabSize="mini"
            android:layout_margin="@dimen/fab_margin"
            android:src="@drawable/ic_create_white_24dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/toolbar"
            android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:background="?android:attr/selectableItemBackground"
        android:layout_marginLeft="@dimen/reminder_preview_container_padding"
        android:layout_marginRight="@dimen/reminder_preview_container_padding"
        android:id="@+id/switchWrapper">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/statusSwitch"
            android:layout_centerVertical="true"
            android:textSize="20sp"
            android:paddingLeft="35dp"
            android:id="@+id/statusText"/>

        <android.support.v7.widget.SwitchCompat
            android:id="@+id/statusSwitch"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginRight="5dp"
            android:clickable="false"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/reminder_preview_container_padding"
            android:layout_marginRight="@dimen/reminder_preview_container_padding"
            android:layout_marginBottom="@dimen/reminder_preview_margin_top"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/time"
                android:textSize="18sp"
                android:layout_marginTop="@dimen/reminder_preview_margin_top"
                android:drawableLeft="@drawable/ic_access_time_black_24dp"
                android:drawablePadding="@dimen/reminder_preview_margin_top"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/location"
                android:textSize="18sp"
                android:layout_marginTop="@dimen/reminder_preview_margin_top"
                android:drawableLeft="@drawable/ic_navigation_black_24dp"
                android:drawablePadding="@dimen/reminder_preview_margin_top"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/group"
                android:textSize="18sp"
                android:layout_marginTop="@dimen/reminder_preview_margin_top"
                android:drawableLeft="@drawable/ic_local_offer_black_24dp"
                android:drawablePadding="@dimen/reminder_preview_margin_top"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/type"
                android:textSize="18sp"
                android:layout_marginTop="@dimen/reminder_preview_margin_top"
                android:drawableLeft="@drawable/ic_assignment_black_24dp"
                android:drawablePadding="@dimen/reminder_preview_margin_top"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/number"
                android:textSize="18sp"
                android:layout_marginTop="@dimen/reminder_preview_margin_top"
                android:drawableLeft="@drawable/ic_account_circle_black_24dp"
                android:drawablePadding="@dimen/reminder_preview_margin_top"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/melody"
                android:textSize="18sp"
                android:layout_marginTop="@dimen/reminder_preview_margin_top"
                android:drawableLeft="@drawable/ic_music_note_black_24dp"
                android:drawablePadding="@dimen/reminder_preview_margin_top"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/repeat"
                android:textSize="18sp"
                android:layout_marginTop="@dimen/reminder_preview_margin_top"
                android:drawableLeft="@drawable/ic_refresh_black_24dp"
                android:drawablePadding="@dimen/reminder_preview_margin_top"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/mapContainer"
            android:visibility="gone"
            android:layout_marginTop="@dimen/reminder_preview_margin_top"
            android:orientation="vertical">

            <fragment
                android:id="@+id/map"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:clickable="true"
                android:name="com.google.android.gms.maps.SupportMapFragment"/>

            </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tasksContainer"
            android:visibility="gone"
            android:layout_marginTop="@dimen/reminder_preview_margin_top"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="@string/tast_hint"
                android:paddingTop="30dp"
                android:textAllCaps="true"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/background"
                android:clickable="true"
                android:background="?android:attr/selectableItemBackground"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="5dp"
                    android:layout_height="match_parent"
                    android:background="@color/bluePrimary"
                    android:id="@+id/listColor"/>

                <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.9"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/checkDone"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="0.4"
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:id="@+id/taskText"
                        android:singleLine="true"
                        android:textSize="17sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:id="@+id/taskNote"
                        android:singleLine="true"
                        android:textSize="15sp"
                        android:layout_marginTop="3dp" />

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/taskDate"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:layout_margin="4dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.7"/>
            </LinearLayout>

                </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/notesContainer"
            android:visibility="gone"
            android:layout_marginTop="@dimen/reminder_preview_margin_top"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="@string/fragment_notes"
                android:paddingTop="30dp"
                android:textAllCaps="true"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="256dp"
                android:scaleType="centerCrop"
                android:id="@+id/imageView"
                android:minHeight="?attr/actionBarSize"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/noteText"
                android:textSize="18sp"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

        </LinearLayout>

        <com.cray.software.justreminder.views.CircularProgress
            android:layout_gravity="center"
            android:layout_height="50dp"
            android:layout_width="50dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:visibility="gone"
            android:id="@+id/progress"
            app:circular_progress_color="?attr/colorPrimaryDark"
            app:circular_progress_size="Small"/>

    </RelativeLayout>

</LinearLayout>
