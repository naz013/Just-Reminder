<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/windowBackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

        <EditText
            android:id="@+id/editField"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="@dimen/create_margin"
            android:layout_marginRight="@dimen/create_margin"
            android:layout_marginTop="?attr/actionBarSize"
            android:background="@android:color/transparent"
            android:hint="@string/name"
            android:textColorHint="@color/whitePrimary"
            android:textSize="@dimen/create_text_size_secondary" />

    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <CheckBox
                android:id="@+id/defaultCheck"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:text="@string/default_string"
                android:textSize="@dimen/checkbox_text_size" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="@dimen/category_margin"
                android:layout_marginRight="@dimen/category_margin"
                android:layout_marginTop="@dimen/create_margin"
                android:clickable="false"
                android:gravity="center_vertical"
                android:text="@string/color"
                android:textAllCaps="true"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textSize="@dimen/create_text_size_normal"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/red_checkbox"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="5dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/circle_drawable_red" />

                <ImageButton
                    android:id="@+id/violet_checkbox"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="5dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/circle_drawable_purple" />

                <ImageButton
                    android:id="@+id/green_checkbox"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="5dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/circle_drawable_green" />

                <ImageButton
                    android:id="@+id/light_green_checkbox"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="5dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/circle_drawable_green_light" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/blue_checkbox"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="5dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/circle_drawable_blue" />

                <ImageButton
                    android:id="@+id/light_blue_checkbox"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="5dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/circle_drawable_blue_light" />

                <ImageButton
                    android:id="@+id/yellow_checkbox"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="5dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/circle_drawable_yellow" />

                <ImageButton
                    android:id="@+id/orange_checkbox"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="5dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/circle_drawable_orange" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/grey_checkbox"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="5dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/circle_drawable_cyan" />

                <ImageButton
                    android:id="@+id/pink_checkbox"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="5dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/circle_drawable_pink" />

                <ImageButton
                    android:id="@+id/sand_checkbox"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="5dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/circle_drawable_teal" />

                <ImageButton
                    android:id="@+id/brown_checkbox"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="5dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/circle_drawable_amber" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/themeGroupPro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:visibility="visible">

                <ImageButton
                    android:id="@+id/deepPurple"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="5dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/circle_drawable_deep_purple" />

                <ImageButton
                    android:id="@+id/indigoCheckbox"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="5dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/circle_drawable_indigo" />

                <ImageButton
                    android:id="@+id/limeCheckbox"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="5dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/circle_drawable_lime" />

                <ImageButton
                    android:id="@+id/deepOrange"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="5dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/circle_drawable_deep_orange" />
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>