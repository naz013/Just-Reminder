<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/after_time_layout"
    android:visibility="visible"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="fill_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:layout_marginRight="@dimen/create_margin"
            android:layout_marginLeft="@dimen/create_margin"
            android:layout_marginBottom="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="fill_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/container"
                    android:orientation="vertical">

                    <CheckBox
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:visibility="gone"
                        android:textSize="@dimen/checkbox_text_size"
                        android:layout_marginBottom="@dimen/create_margin"
                        android:text="@string/export_check_title"
                        android:id="@+id/timeExport" />

                    <CheckBox
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:visibility="gone"
                        android:textSize="@dimen/checkbox_text_size"
                        android:layout_marginBottom="@dimen/create_margin"
                        android:text="@string/add_to_google_tasks"
                        android:id="@+id/timeTaskExport" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_toLeftOf="@+id/deleteButton"
                            android:gravity="center|right"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="75dp"
                                android:id="@+id/hoursView"
                                android:textSize="50sp"
                                android:gravity="center|bottom"
                                android:layout_toLeftOf="@+id/hours"
                                android:text="42"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="75dp"
                                android:id="@+id/hours"
                                android:textSize="20sp"
                                android:gravity="center|bottom"
                                android:text="h"
                                android:layout_toLeftOf="@+id/minutesView"
                                android:layout_marginRight="5dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="75dp"
                                android:id="@+id/minutesView"
                                android:textSize="50sp"
                                android:gravity="center|bottom"
                                android:layout_toLeftOf="@+id/minutes"
                                android:text="42"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="75dp"
                                android:id="@+id/minutes"
                                android:textSize="20sp"
                                android:gravity="center|bottom"
                                android:text="m"
                                android:layout_toLeftOf="@+id/secondsView"
                                android:layout_marginRight="5dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="75dp"
                                android:id="@+id/secondsView"
                                android:textSize="50sp"
                                android:gravity="center|bottom"
                                android:layout_toLeftOf="@+id/seconds"
                                android:text="55"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="75dp"
                                android:id="@+id/seconds"
                                android:textSize="20sp"
                                android:gravity="center|bottom"
                                android:text="s"
                                android:layout_alignParentRight="true"/>

                        </RelativeLayout>

                        <ImageButton
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:id="@+id/deleteButton"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            style="?android:attr/borderlessButtonStyle"
                            android:src="@drawable/ic_clear_grey600_24dp"/>

                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:orientation="vertical"
                    android:layout_marginTop="40dp"
                    android:layout_below="@+id/container">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="1"
                            android:textSize="30sp"
                            style="?android:attr/borderlessButtonStyle"
                            android:layout_weight="1"/>

                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="2"
                            android:textSize="30sp"
                            style="?android:attr/borderlessButtonStyle"
                            android:layout_weight="1"/>

                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="3"
                            android:textSize="30sp"
                            style="?android:attr/borderlessButtonStyle"
                            android:layout_weight="1"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="4"
                            android:textSize="30sp"
                            style="?android:attr/borderlessButtonStyle"
                            android:layout_weight="1"/>

                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="5"
                            android:textSize="30sp"
                            style="?android:attr/borderlessButtonStyle"
                            android:layout_weight="1"/>

                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="6"
                            android:textSize="30sp"
                            style="?android:attr/borderlessButtonStyle"
                            android:layout_weight="1"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="7"
                            android:textSize="30sp"
                            style="?android:attr/borderlessButtonStyle"
                            android:layout_weight="1"/>

                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="8"
                            android:textSize="30sp"
                            style="?android:attr/borderlessButtonStyle"
                            android:layout_weight="1"/>

                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="9"
                            android:textSize="30sp"
                            style="?android:attr/borderlessButtonStyle"
                            android:layout_weight="1"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="7"
                            android:visibility="invisible"
                            style="?android:attr/borderlessButtonStyle"
                            android:layout_weight="1"/>

                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="0"
                            android:textSize="30sp"
                            style="?android:attr/borderlessButtonStyle"
                            android:layout_weight="1"/>

                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="9"
                            android:visibility="invisible"
                            style="?android:attr/borderlessButtonStyle"
                            android:layout_weight="1"/>

                    </LinearLayout>

                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>