<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="2dp"
    card_view:cardCornerRadius="0dp"
    card_view:cardElevation="2dp">

    <LinearLayout
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <com.cray.software.justreminder.roboto_views.RoboTextView
            android:id="@+id/listColor"
            android:layout_width="5dp"
            android:layout_height="match_parent"
            android:background="@color/bluePrimary" />

        <com.cray.software.justreminder.roboto_views.RoboCheckBox
            android:id="@+id/checkDone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.9" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="5dp"
            android:layout_weight="0.4"
            android:orientation="vertical">

            <com.cray.software.justreminder.roboto_views.RoboTextView
                android:id="@+id/task"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:singleLine="true"
                android:text="Hello"
                android:textSize="17sp"
                card_view:font_style="roboto_light" />

            <com.cray.software.justreminder.roboto_views.RoboTextView
                android:id="@+id/note"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="3dp"
                android:singleLine="true"
                android:text="Hello"
                android:textSize="15sp"
                card_view:font_style="roboto_light" />

        </LinearLayout>

        <com.cray.software.justreminder.roboto_views.RoboTextView
            android:id="@+id/taskDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="4dp"
            android:layout_weight="0.7"
            android:gravity="center"
            android:textSize="14sp"
            card_view:font_style="roboto_medium" />
    </LinearLayout>
</android.support.v7.widget.CardView>