<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:widget="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/windowBackground">

    <include layout="@layout/toolbar"
        android:id="@+id/toolbar"/>

    <com.cray.software.justreminder.views.PaperButton
        widget:paper_text="VKontakte"
        android:layout_width="wrap_content"
        widget:paper_color="@color/colorBlue"
        widget:paper_corner_radius="@dimen/log_in_button_corner_radius"
        android:layout_gravity="center"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="@dimen/log_in_first_button_margin_top"
        widget:paper_text_size="@dimen/log_in_button_text_size"
        android:id="@+id/vkCom"
        widget:paper_text_color="@color/colorWhite"
        android:layout_height="@dimen/log_in_button_height" />

    <com.cray.software.justreminder.views.PaperButton
        widget:paper_text="Facebook"
        android:layout_width="wrap_content"
        widget:paper_color="@color/colorBlueDark"
        widget:paper_corner_radius="@dimen/log_in_button_corner_radius"
        android:layout_gravity="center"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="@dimen/log_in_first_button_margin_top"
        widget:paper_text_size="@dimen/log_in_button_text_size"
        android:id="@+id/facebook"
        widget:paper_text_color="@color/colorWhite"
        android:layout_height="@dimen/log_in_button_height" />

</LinearLayout>