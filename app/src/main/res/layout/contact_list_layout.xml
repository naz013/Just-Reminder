<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/windowBackground">

    <include layout="@layout/toolbar"
        android:id="@+id/toolbar"/>

    <com.cray.software.justreminder.views.FloatingEditText
        app:floating_edit_text_highlighted_color="?attr/colorAccent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/search"
        android:layout_marginTop="@dimen/contact_margin_top"
        android:layout_marginLeft="@dimen/contact_margin"
        android:layout_marginRight="@dimen/contact_margin"
        android:id="@+id/searchField"
        android:layout_gravity="center_horizontal" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/contactsList"
        android:layout_marginLeft="@dimen/contact_margin"
        android:layout_marginRight="@dimen/contact_margin"
        android:layout_marginTop="@dimen/contact_margin_top"
        android:layout_gravity="center_horizontal" />
</LinearLayout>