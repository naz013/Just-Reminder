<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:id="@+id/windowBackground">

    <android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:minHeight="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:id="@+id/toolbar"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:id="@+id/editField"
            android:textSize="@dimen/create_text_size_secondary"
            android:hint="@string/title"
            android:textColorHint="@color/colorWhite"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="@dimen/create_margin"
            android:layout_marginTop="?attr/actionBarSize"
            android:background="@android:color/transparent"
            android:layout_marginRight="@dimen/create_margin"/>

    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/color"
                android:textStyle="bold"
                android:clickable="false"
                android:textAllCaps="true"
                android:layout_marginTop="@dimen/create_margin"
                android:layout_marginLeft="@dimen/category_margin"
                android:layout_marginRight="@dimen/category_margin"
                android:layout_gravity="center_horizontal"
                android:gravity="center_vertical"
                android:textSize="@dimen/create_text_size_normal" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <ImageButton
                    android:layout_height="50dp"
                    android:layout_width="50dp"
                    android:id="@+id/red_checkbox"
                    android:background="@android:color/transparent"
                    android:src="@drawable/circle_drawable_red"
                    android:layout_margin="5dp"/>

                <ImageButton
                    android:layout_height="50dp"
                    android:layout_width="50dp"
                    android:background="@android:color/transparent"
                    android:id="@+id/violet_checkbox"
                    android:src="@drawable/circle_drawable_purple"
                    android:layout_margin="5dp"/>

                <ImageButton
                    android:layout_height="50dp"
                    android:layout_width="50dp"
                    android:background="@android:color/transparent"
                    android:id="@+id/green_checkbox"
                    android:src="@drawable/circle_drawable_green"
                    android:layout_margin="5dp"/>

                <ImageButton
                    android:layout_height="50dp"
                    android:layout_width="50dp"
                    android:background="@android:color/transparent"
                    android:id="@+id/light_green_checkbox"
                    android:src="@drawable/circle_drawable_green_light"
                    android:layout_margin="5dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <ImageButton
                    android:layout_height="50dp"
                    android:layout_width="50dp"
                    android:id="@+id/blue_checkbox"
                    android:background="@android:color/transparent"
                    android:src="@drawable/circle_drawable_blue"
                    android:layout_margin="5dp"/>

                <ImageButton
                    android:layout_height="50dp"
                    android:layout_width="50dp"
                    android:id="@+id/light_blue_checkbox"
                    android:background="@android:color/transparent"
                    android:src="@drawable/circle_drawable_blue_light"
                    android:layout_margin="5dp"/>

                <ImageButton
                    android:layout_height="50dp"
                    android:layout_width="50dp"
                    android:id="@+id/yellow_checkbox"
                    android:background="@android:color/transparent"
                    android:src="@drawable/circle_drawable_yellow"
                    android:layout_margin="5dp"/>

                <ImageButton
                    android:layout_height="50dp"
                    android:layout_width="50dp"
                    android:id="@+id/orange_checkbox"
                    android:background="@android:color/transparent"
                    android:src="@drawable/circle_drawable_orange"
                    android:layout_margin="5dp"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <ImageButton
                    android:layout_height="50dp"
                    android:layout_width="50dp"
                    android:id="@+id/grey_checkbox"
                    android:background="@android:color/transparent"
                    android:src="@drawable/circle_drawable_cyan"
                    android:layout_margin="5dp"/>

                <ImageButton
                    android:layout_height="50dp"
                    android:layout_width="50dp"
                    android:id="@+id/pink_checkbox"
                    android:background="@android:color/transparent"
                    android:src="@drawable/circle_drawable_pink"
                    android:layout_margin="5dp"/>

                <ImageButton
                    android:layout_height="50dp"
                    android:layout_width="50dp"
                    android:id="@+id/sand_checkbox"
                    android:background="@android:color/transparent"
                    android:src="@drawable/circle_drawable_teal"
                    android:layout_margin="5dp"/>

                <ImageButton
                    android:layout_height="50dp"
                    android:layout_width="50dp"
                    android:id="@+id/brown_checkbox"
                    android:background="@android:color/transparent"
                    android:src="@drawable/circle_drawable_amber"
                    android:layout_margin="5dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="visible"
                android:layout_gravity="center"
                android:id="@+id/themeGroupPro"
                android:orientation="horizontal">

                <ImageButton
                    android:layout_height="50dp"
                    android:layout_width="50dp"
                    android:id="@+id/deepPurple"
                    android:background="@android:color/transparent"
                    android:src="@drawable/circle_drawable_deep_purple"
                    android:layout_margin="5dp"/>

                <ImageButton
                    android:layout_height="50dp"
                    android:layout_width="50dp"
                    android:id="@+id/indigoCheckbox"
                    android:background="@android:color/transparent"
                    android:src="@drawable/circle_drawable_indigo"
                    android:layout_margin="5dp"/>

                <ImageButton
                    android:layout_height="50dp"
                    android:layout_width="50dp"
                    android:id="@+id/limeCheckbox"
                    android:background="@android:color/transparent"
                    android:src="@drawable/circle_drawable_lime"
                    android:layout_margin="5dp"/>

                <ImageButton
                    android:layout_height="50dp"
                    android:layout_width="50dp"
                    android:id="@+id/deepOrange"
                    android:background="@android:color/transparent"
                    android:src="@drawable/circle_drawable_deep_orange"
                    android:layout_margin="5dp"/>
            </LinearLayout>

        </LinearLayout>

    </ScrollView>
</LinearLayout>