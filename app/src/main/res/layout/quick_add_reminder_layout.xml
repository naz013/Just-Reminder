<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/windowBackground">

    <include layout="@layout/toolbar"
        android:id="@+id/toolbar"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/wrapper"
        android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/create_margin"
            android:layout_marginBottom="@dimen/create_margin">

            <com.cray.software.justreminder.views.FloatingEditText
                app:floating_edit_text_highlighted_color="?attr/colorAccent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/task_text"
                android:textSize="@dimen/create_text_size_normal"
                android:maxLength="300"
                android:gravity="top|left"
                android:layout_marginLeft="@dimen/create_margin"
                android:layout_marginRight="@dimen/create_margin"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:hint="@string/tast_hint"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:inputType="textMultiLine"
                android:layout_gravity="center_horizontal" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_above="@+id/button"
                android:background="@color/grey_dark"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:gravity="center_horizontal"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/create_margin"
                android:layout_marginBottom="@dimen/create_margin"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:background="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:id="@+id/dateRing">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="25/06"
                        android:ems="10"
                        android:clickable="false"
                        android:gravity="center"
                        android:textSize="@dimen/create_text_size_primary"
                        android:id="@+id/dateField" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2014"
                        android:ems="10"
                        android:clickable="false"
                        android:gravity="center"
                        android:textSize="@dimen/create_text_size_secondary"
                        android:id="@+id/dateYearField" />

                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textSize="@dimen/create_text_size_primary"
                    android:text="14:05"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:background="?android:attr/selectableItemBackground"
                    android:layout_marginLeft="10dp"
                    android:ems="10"
                    android:id="@+id/timeField" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_above="@+id/button"
                android:background="@color/grey_dark"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/create_margin"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:gravity="left|center"
                    android:layout_marginLeft="@dimen/create_margin"
                    android:layout_marginTop="@dimen/create_margin"
                    android:layout_marginRight="@dimen/create_margin"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center|left"
                        android:id="@+id/text1"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"
                        android:text="@string/string_repeat_every"
                        android:textSize="@dimen/create_text_size_normal"/>

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:minWidth="50dp"
                        android:layout_toRightOf="@+id/text1"
                        android:maxLength="3"
                        android:inputType="number"
                        android:gravity="center"
                        android:layout_marginLeft="@dimen/create_margin"
                        android:textSize="@dimen/create_text_size_primary"
                        android:id="@+id/repeatDays"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center|left"
                        android:layout_centerVertical="true"
                        android:text="@string/remaining_days"
                        android:layout_toRightOf="@+id/repeatDays"
                        android:textSize="@dimen/create_text_size_normal"/>

                </RelativeLayout>

                <SeekBar
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/create_margin"
                    android:layout_marginTop="@dimen/create_margin"
                    android:id="@+id/repeatDateInt"
                    android:max="4"
                    android:layout_marginRight="@dimen/create_margin"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_above="@+id/button"
                android:background="@color/grey_dark"/>

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center"
                android:visibility="gone"
                android:layout_marginTop="@dimen/create_margin"
                android:textSize="@dimen/checkbox_text_size"
                android:layout_marginBottom="@dimen/create_margin"
                android:text="@string/add_to_google_tasks"
                android:id="@+id/taskExport" />

        </LinearLayout>

    </ScrollView>
    </RelativeLayout>
</LinearLayout>