<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:visibility="visible"
        android:orientation="vertical">

        <fragment xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/map"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:name="com.google.android.gms.maps.SupportMapFragment"/>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="10dp"
            android:id="@+id/card"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <AutoCompleteTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/string_address"
                    android:singleLine="true"
                    android:layout_margin="2dp"
                    android:drawableLeft="@drawable/ic_search_grey600_24dp"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/create_text_size_normal"
                    android:layout_toLeftOf="@+id/cardClear"
                    android:id="@+id/cardSearch"/>

                <ImageButton
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/cardClear"
                    android:layout_centerVertical="true"
                    android:layout_margin="2dp"
                    android:layout_toLeftOf="@+id/myLocation"
                    style="?android:borderlessButtonStyle"
                    android:src="@drawable/ic_clear_grey600_24dp"/>

                <ImageButton
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/myLocation"
                    android:layout_centerVertical="true"
                    android:layout_margin="2dp"
                    android:layout_alignParentRight="true"
                    style="?android:borderlessButtonStyle"
                    android:src="@drawable/ic_my_location_grey600_24dp"/>
            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/card"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:id="@+id/card1">

        <ImageButton
            android:layout_width="@dimen/create_imagebutton_size"
            android:layout_height="@dimen/create_imagebutton_size"
            android:id="@+id/zoomOut"
            style="?android:borderlessButtonStyle"
            android:src="@drawable/ic_fullscreen_exit_grey600_24dp"/>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/card1"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:id="@+id/card2">

        <ImageButton
            android:layout_width="@dimen/create_imagebutton_size"
            android:layout_height="@dimen/create_imagebutton_size"
            android:id="@+id/layers"
            style="?android:borderlessButtonStyle"
            android:src="@drawable/ic_layers_grey600_24dp"/>

        </android.support.v7.widget.CardView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="85dp"
            android:visibility="visible"
            android:layout_alignParentTop="true"
            android:background="@drawable/popup"
            android:layout_toRightOf="@+id/card2"
            android:id="@+id/layersContainer">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/typeNormal"
                android:textSize="18sp"
                android:clickable="true"
                android:padding="7dp"

                android:text="@string/map_normal"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/typeSatellite"
                android:textSize="18sp"
                android:clickable="true"
                android:padding="7dp"
                android:text="@string/map_satellite"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/typeHybrid"
                android:textSize="18sp"
                android:clickable="true"
                android:padding="7dp"
                android:text="@string/map_hybrid"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/typeTerrain"
                android:textSize="18sp"
                android:clickable="true"
                android:padding="7dp"
                android:text="@string/map_terrain"/>

        </LinearLayout>

        <Spinner
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:visibility="gone"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_margin="10dp"
            android:id="@+id/placesList"/>

    </RelativeLayout>

</LinearLayout>