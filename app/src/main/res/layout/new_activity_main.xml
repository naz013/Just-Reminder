<!-- A DrawerLayout is intended to be used as the top-level content view using match_parent for both width and height to consume the full space available. -->
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cray.software.justreminder.app.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/windowBg"
        android:layout_height="match_parent">

        <include layout="@layout/toolbar"
            android:id="@+id/toolbar_main"
            android:layout_height="?attr/actionBarSize"
            android:layout_alignParentTop="true"
            android:layout_width="match_parent"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_above="@+id/emptyLayout"
            android:layout_below="@+id/toolbar_main"
            android:id="@+id/wrapper"
            android:layout_height="match_parent">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/currentList"
            android:layout_width="match_parent"
            android:overScrollMode="never"
            android:visibility="visible"
            android:divider="@android:color/transparent"
            android:dividerHeight="3dp"
            android:layout_height="match_parent"
            android:scrollbars="none"
            android:focusable="false"
            android:choiceMode="singleChoice"
            android:fastScrollEnabled="true"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/emptyItem"
                android:visibility="gone"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:padding="50dp"
                    android:id="@+id/emptyImage"
                    android:layout_height="match_parent"
                    android:src="@drawable/bell_icon"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:textAppearance="@android:style/TextAppearance.Large"
                    android:text="@string/no_active_text"
                    android:gravity="center|top"
                    android:layout_height="match_parent" />

                </LinearLayout>

            <com.getbase.floatingactionbutton.FloatingActionsMenu
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|right"
                android:visibility="gone"
                fab:fab_addButtonColorNormal="?attr/colorPrimary"
                fab:fab_addButtonColorPressed="?attr/colorPrimaryDark"
                fab:fab_addButtonPlusIconColor="@color/colorWhite"
                fab:fab_addButtonSize="normal"
                fab:fab_addButtonStrokeVisible="true"
                android:id="@+id/mainMenu"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                fab:fab_labelStyle="@style/menu_labels_style"
                fab:fab_labelsPosition="left"/>

            <android.support.v7.widget.CardView
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:id="@+id/noteCard"
                android:visibility="gone"
                android:layout_gravity="bottom"
                android:layout_marginRight="88dp"
                android:layout_marginLeft="16dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="16dp"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:orientation="vertical">

                    <com.cray.software.justreminder.views.FloatingEditText
                        fab:floating_edit_text_highlighted_color="?attr/colorAccent"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:inputType="textMultiLine"
                        android:hint="@string/quick_note_hint"
                        android:layout_gravity="center"
                        android:id="@+id/quickNote"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        style="?android:buttonStyle"
                        android:gravity="center"
                        android:background="?android:attr/selectableItemBackground"
                        android:text="@string/save_dialog_button"
                        android:layout_marginTop="5dp"
                        android:id="@+id/buttonSave"
                        android:layout_gravity="right|bottom" />

                </LinearLayout>

                </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:id="@+id/noteStatusCard"
                android:visibility="gone"
                android:layout_gravity="bottom"
                android:layout_marginRight="88dp"
                android:layout_marginLeft="16dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="16dp"
                android:layout_height="130dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/show_note_question"
                        android:layout_above="@+id/buttonNo"
                        android:layout_marginRight="5dp"
                        android:gravity="center"
                        android:layout_marginLeft="5dp"
                        android:textSize="20sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/import_dialog_button_yes"
                        android:layout_toLeftOf="@+id/buttonNo"
                        android:layout_marginRight="10dp"
                        android:background="?android:attr/selectableItemBackground"
                        style="?android:buttonStyle"
                        android:layout_alignParentBottom="true"
                        android:id="@+id/buttonYes"
                        android:textSize="20sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:background="?android:attr/selectableItemBackground"
                        style="?android:buttonStyle"
                        android:layout_marginRight="5dp"
                        android:text="@string/import_dialog_button_no"
                        android:id="@+id/buttonNo"
                        android:textSize="20sp"/>

                    </RelativeLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:id="@+id/noteReminderCard"
                android:visibility="gone"
                android:layout_gravity="bottom"
                android:layout_marginRight="88dp"
                android:layout_marginLeft="16dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="16dp"
                android:layout_height="130dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/note_reminder_question"
                        android:layout_above="@+id/buttonReminderNo"
                        android:layout_marginRight="5dp"
                        android:layout_marginLeft="5dp"
                        android:gravity="center"
                        android:textSize="20sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/import_dialog_button_yes"
                        android:layout_toLeftOf="@+id/buttonReminderNo"
                        android:layout_marginRight="10dp"
                        android:background="?android:attr/selectableItemBackground"
                        style="?android:buttonStyle"
                        android:layout_alignParentBottom="true"
                        android:id="@+id/buttonReminderYes"
                        android:textSize="20sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:background="?android:attr/selectableItemBackground"
                        style="?android:buttonStyle"
                        android:layout_marginRight="5dp"
                        android:text="@string/import_dialog_button_no"
                        android:id="@+id/buttonReminderNo"
                        android:textSize="20sp"/>

                </RelativeLayout>

            </android.support.v7.widget.CardView>

        </RelativeLayout >
        <LinearLayout
            android:id="@+id/emptyLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_alignParentBottom="true">

            <com.google.android.gms.ads.AdView
                android:id="@+id/adView"
                xmlns:ads="http://schemas.android.com/apk/res-auto"
                android:layout_height="50dp"
                ads:adSize="BANNER"
                ads:adUnitId="ca-app-pub-5133908997831400/2152274255"
                android:layout_width="match_parent"/>

            </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_gravity="start"
        android:id="@+id/drawerBg"
        android:background="@color/colorWhite"
        android:layout_height="match_parent">

    <ScrollView
        android:layout_gravity="start"
        android:layout_above="@+id/pinnedLayout"
        android:layout_width="match_parent"
        android:overScrollMode="ifContentScrolls"
        android:scrollbars="none"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="175dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/material"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="25sp"
                    android:textColor="@color/colorWhite"
                    android:id="@+id/appNameBanner"
                    android:text="@string/app_name"
                    android:gravity="center"/>

                </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/main_drawer_fragment_settings_t_size"
                android:clickable="true"
                android:gravity="center_vertical"
                android:background="?android:attr/selectableItemBackground"
                android:id="@+id/activeScreen"
                android:text="@string/drawer_active_reminder"
                android:paddingLeft="@dimen/main_drawer_fragment_main_p_left"
                android:paddingTop="16dp"
                android:paddingBottom="@dimen/main_drawer_fragment_main_p_bottom"
                android:drawableLeft="@drawable/ic_access_time_grey600_24dp"
                android:drawablePadding="@dimen/main_drawer_fragment_main_drawable_p"
                android:visibility="visible"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/main_drawer_fragment_settings_t_size"
                android:clickable="true"
                android:gravity="center_vertical"
                android:background="?android:attr/selectableItemBackground"
                android:id="@+id/archiveScreen"
                android:text="@string/drawer_archive_reminder"
                android:paddingLeft="@dimen/main_drawer_fragment_main_p_left"
                android:paddingTop="@dimen/main_drawer_fragment_main_p_top"
                android:paddingBottom="@dimen/main_drawer_fragment_main_p_bottom"
                android:drawableLeft="@drawable/ic_storage_grey600_24dp"
                android:drawablePadding="@dimen/main_drawer_fragment_main_drawable_p"
                android:visibility="visible"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/main_drawer_fragment_settings_t_size"
                android:clickable="true"
                android:gravity="center_vertical"
                android:background="?android:attr/selectableItemBackground"
                android:id="@+id/categories"
                android:text="@string/string_categories"
                android:paddingLeft="@dimen/main_drawer_fragment_main_p_left"
                android:paddingTop="@dimen/main_drawer_fragment_main_p_top"
                android:paddingBottom="@dimen/main_drawer_fragment_main_p_bottom"
                android:drawableLeft="@drawable/ic_local_offer_grey600_24dp"
                android:drawablePadding="@dimen/main_drawer_fragment_main_drawable_p"
                android:visibility="visible"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/main_drawer_fragment_settings_t_size"
                android:clickable="true"
                android:gravity="center_vertical"
                android:background="?android:attr/selectableItemBackground"
                android:id="@+id/notes"
                android:text="@string/fragment_notes"
                android:paddingLeft="@dimen/main_drawer_fragment_main_p_left"
                android:paddingTop="@dimen/main_drawer_fragment_main_p_top"
                android:paddingBottom="@dimen/main_drawer_fragment_main_p_bottom"
                android:drawableLeft="@drawable/ic_event_note_grey600_24dp"
                android:drawablePadding="@dimen/main_drawer_fragment_main_drawable_p"
                android:visibility="visible"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/main_drawer_fragment_settings_t_size"
                android:clickable="true"
                android:gravity="center_vertical"
                android:background="?android:attr/selectableItemBackground"
                android:id="@+id/googleTasks"
                android:text="@string/google_tasks_title"
                android:paddingLeft="@dimen/main_drawer_fragment_main_p_left"
                android:paddingTop="@dimen/main_drawer_fragment_main_p_top"
                android:paddingBottom="@dimen/main_drawer_fragment_main_p_bottom"
                android:drawableLeft="@drawable/google_tasks_grey"
                android:drawablePadding="@dimen/main_drawer_fragment_main_drawable_p"
                android:visibility="gone"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/main_drawer_fragment_settings_t_size"
                android:clickable="true"
                android:gravity="center_vertical"
                android:background="?android:attr/selectableItemBackground"
                android:id="@+id/calendar"
                android:text="@string/calendar_fragment"
                android:paddingLeft="@dimen/main_drawer_fragment_main_p_left"
                android:paddingTop="@dimen/main_drawer_fragment_main_p_top"
                android:paddingBottom="@dimen/main_drawer_fragment_main_p_bottom"
                android:drawableLeft="@drawable/ic_today_grey600_24dp"
                android:drawablePadding="@dimen/main_drawer_fragment_main_drawable_p"
                android:visibility="visible"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/main_drawer_fragment_settings_t_size"
                android:clickable="true"
                android:gravity="center_vertical"
                android:background="?android:attr/selectableItemBackground"
                android:id="@+id/geoScreen"
                android:text="@string/geo_fragment"
                android:paddingLeft="@dimen/main_drawer_fragment_main_p_left"
                android:paddingTop="@dimen/main_drawer_fragment_main_p_top"
                android:paddingBottom="@dimen/main_drawer_fragment_main_p_bottom"
                android:drawableLeft="@drawable/ic_navigation_grey600_24dp"
                android:drawablePadding="@dimen/main_drawer_fragment_main_drawable_p"
                android:visibility="visible"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/main_drawer_fragment_settings_t_size"
                android:clickable="true"
                android:gravity="center_vertical"
                android:background="?android:attr/selectableItemBackground"
                android:id="@+id/places"
                android:text="@string/settings_places"
                android:paddingLeft="@dimen/main_drawer_fragment_main_p_left"
                android:paddingTop="@dimen/main_drawer_fragment_main_p_top"
                android:paddingBottom="@dimen/main_drawer_fragment_main_p_bottom"
                android:drawableLeft="@drawable/ic_location_on_grey600_24dp"
                android:drawablePadding="@dimen/main_drawer_fragment_main_drawable_p"
                android:visibility="gone"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/main_drawer_fragment_settings_t_size"
                android:clickable="true"
                android:gravity="center_vertical"
                android:background="?android:attr/selectableItemBackground"
                android:id="@+id/templates"
                android:text="@string/settings_sms_templates_title"
                android:paddingLeft="@dimen/main_drawer_fragment_main_p_left"
                android:paddingTop="@dimen/main_drawer_fragment_main_p_top"
                android:paddingBottom="@dimen/main_drawer_fragment_main_p_bottom"
                android:drawableLeft="@drawable/ic_textsms_grey600_24dp"
                android:drawablePadding="@dimen/main_drawer_fragment_main_drawable_p"
                android:visibility="gone"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/main_drawer_fragment_settings_t_size"
                android:clickable="true"
                android:gravity="center_vertical"
                android:background="?android:attr/selectableItemBackground"
                android:id="@+id/manageBackup"
                android:text="@string/manage_backup_title"
                android:paddingLeft="@dimen/main_drawer_fragment_main_p_left"
                android:paddingTop="@dimen/main_drawer_fragment_main_p_top"
                android:paddingBottom="@dimen/main_drawer_fragment_main_p_bottom"
                android:drawableLeft="@drawable/ic_history_grey600_24dp"
                android:drawablePadding="@dimen/main_drawer_fragment_main_drawable_p"
                android:visibility="visible"/>

            <TextView
                android:id="@+id/fragmentSettings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/main_drawer_fragment_main_p_left"
                android:paddingTop="@dimen/main_drawer_fragment_main_p_top"
                android:paddingBottom="16dp"
                android:drawableLeft="@drawable/ic_settings_grey600_24dp"
                android:drawablePadding="@dimen/main_drawer_fragment_main_drawable_p"
                android:text="@string/action_settings"
                android:textSize="@dimen/main_drawer_fragment_settings_t_size"
                android:clickable="true"
                android:gravity="center_vertical"
                android:background="?android:attr/selectableItemBackground"/>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"/>

            <TextView
                android:id="@+id/help"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingTop="@dimen/main_drawer_fragment_main_p_top"
                android:paddingBottom="@dimen/main_drawer_fragment_main_p_bottom"
                android:text="@string/settings_help_point"
                android:textSize="14sp"
                android:clickable="true"
                android:gravity="center_vertical"
                android:background="?android:attr/selectableItemBackground"/>

            <TextView
                android:id="@+id/helpTranslate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingTop="@dimen/main_drawer_fragment_main_p_top"
                android:paddingBottom="@dimen/main_drawer_fragment_main_p_bottom"
                android:text="@string/translation_title"
                android:textSize="14sp"
                android:clickable="true"
                android:gravity="center_vertical"
                android:background="?android:attr/selectableItemBackground"/>

            </LinearLayout>

        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/pinnedLayout"
            android:layout_alignParentBottom="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/moreApps"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingTop="@dimen/main_drawer_fragment_main_p_top"
                android:paddingBottom="@dimen/main_drawer_fragment_main_p_bottom"
                android:text="@string/string_more_apps"
                android:textSize="14sp"
                android:clickable="true"
                android:gravity="center_vertical"
                android:background="?android:attr/selectableItemBackground"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:clickable="true"
                android:paddingLeft="10dp"
                android:paddingTop="7dp"
                android:paddingBottom="7dp"
                android:background="?android:attr/selectableItemBackground"
                android:id="@+id/ads_container">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/buy_pro_string"
                    android:layout_toLeftOf="@+id/basket"
                    android:layout_centerVertical="true"
                    android:clickable="false"
                    android:gravity="center|left"
                    android:textSize="25sp"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/market_icon"
                    android:layout_marginRight="25dp"
                    android:clickable="false"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:id="@+id/basket"/>

            </RelativeLayout>

        </LinearLayout>

    </RelativeLayout>

</android.support.v4.widget.DrawerLayout>
