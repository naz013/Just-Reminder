<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/windowBackground">

    <include layout="@layout/toolbar"
        android:id="@+id/toolbar"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/wrapper"
        android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
        
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="@dimen/wrapper_padding_right"
            android:paddingLeft="@dimen/wrapper_padding_left"
            android:orientation="vertical">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/birthday_name_hint"
                android:id="@+id/birthName"
                style="@android:style/Widget.TextView"
                android:singleLine="true"
                android:background="@android:color/transparent"
                android:textSize="@dimen/add_birthday_text_size_primary"
                android:padding="20dp"
                android:inputType="textPersonName"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_above="@+id/button"
                android:background="@color/grey_dark"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:gravity="center"
                android:id="@+id/birthDate"
                android:background="?android:attr/selectableItemBackground"
                android:textSize="@dimen/add_birthday_text_size_primary"
                android:text="25/05/1985"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_above="@+id/button"
                android:background="@color/grey_dark"/>

            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/contactCheck"
                android:textSize="@dimen/add_birthday_text_size_primary"
                android:gravity="center"
                android:clickable="true"
                android:layout_marginTop="@dimen/view_margin_top"
                android:text="@string/attach_contact_check"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/view_margin_top"
                android:id="@+id/container"
                android:visibility="gone"
                android:orientation="vertical">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="phone"
                    android:ems="10"
                    android:hint="@string/phone_number_hint"
                    android:id="@+id/phone"
                    android:textSize="@dimen/add_birthday_text_size_primary"
                    android:layout_marginTop="@dimen/view_margin_top"
                    android:layout_gravity="center_horizontal" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/view_margin_top"
                    android:id="@+id/contactLayout"
                    android:clickable="true"
                    android:background="?android:attr/selectableItemBackground"
                    android:orientation="horizontal">

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textSize="@dimen/add_birthday_text_size_primary"
                        android:id="@+id/pickContact"
                        android:clickable="false"
                        android:background="@android:color/transparent"
                        android:drawableLeft="@drawable/ic_person_add_grey600_24dp"
                        android:text="@string/select_contact_button"/>

                </RelativeLayout>

            </LinearLayout>
            </LinearLayout>
        
        </ScrollView>

    </RelativeLayout>
</LinearLayout>