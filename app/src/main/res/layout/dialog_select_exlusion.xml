<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:paddingBottom="16dp"
    android:paddingLeft="24dp"
    android:paddingRight="24dp"
    android:paddingTop="24dp">

    <TextView
        android:id="@+id/dialogTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/create_margin"
        android:gravity="center"
        android:text="@string/exclusion"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <CheckBox
        android:id="@+id/selectInterval"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/interval" />

    <LinearLayout
        android:id="@+id/intervalContainer"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/from"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/create_margin"
            android:text="From: 8"
            android:textSize="@dimen/create_text_size_normal" />

        <TextView
            android:id="@+id/to"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="To: 15"
            android:textSize="@dimen/create_text_size_normal" />

    </LinearLayout>

    <CheckBox
        android:id="@+id/selectHours"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/create_margin"
        android:text="@string/hours" />

    <LinearLayout
        android:id="@+id/hoursContainer"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ToggleButton
                android:id="@+id/zero"
                android:layout_width="@dimen/dialog_toggle_size"
                android:layout_height="@dimen/dialog_toggle_size"
                android:background="@drawable/toggle_blue"
                android:gravity="center"
                android:singleLine="true"
                android:textOff="0"
                android:textOn="0"
                android:textSize="@dimen/create_text_size_small" />

            <ToggleButton
                android:id="@+id/one"
                android:layout_width="@dimen/dialog_toggle_size"
                android:layout_height="@dimen/dialog_toggle_size"
                android:background="@drawable/toggle_blue"
                android:gravity="center"
                android:singleLine="true"
                android:textOff="1"
                android:textOn="1"
                android:textSize="@dimen/create_text_size_small" />

            <ToggleButton
                android:id="@+id/two"
                android:layout_width="@dimen/dialog_toggle_size"
                android:layout_height="@dimen/dialog_toggle_size"
                android:background="@drawable/toggle_blue"
                android:gravity="center"
                android:singleLine="true"
                android:textOff="2"
                android:textOn="2"
                android:textSize="@dimen/create_text_size_small" />

            <ToggleButton
                android:id="@+id/three"
                android:layout_width="@dimen/dialog_toggle_size"
                android:layout_height="@dimen/dialog_toggle_size"
                android:background="@drawable/toggle_blue"
                android:gravity="center"
                android:singleLine="true"
                android:textOff="3"
                android:textOn="3"
                android:textSize="@dimen/create_text_size_small" />

            <ToggleButton
                android:id="@+id/four"
                android:layout_width="@dimen/dialog_toggle_size"
                android:layout_height="@dimen/dialog_toggle_size"
                android:background="@drawable/toggle_blue"
                android:gravity="center"
                android:singleLine="true"
                android:textOff="4"
                android:textOn="4"
                android:textSize="@dimen/create_text_size_small" />

            <ToggleButton
                android:id="@+id/five"
                android:layout_width="@dimen/dialog_toggle_size"
                android:layout_height="@dimen/dialog_toggle_size"
                android:background="@drawable/toggle_blue"
                android:gravity="center"
                android:singleLine="true"
                android:textOff="5"
                android:textOn="5"
                android:textSize="@dimen/create_text_size_small" />

            <ToggleButton
                android:id="@+id/six"
                android:layout_width="@dimen/dialog_toggle_size"
                android:layout_height="@dimen/dialog_toggle_size"
                android:background="@drawable/toggle_blue"
                android:gravity="center"
                android:singleLine="true"
                android:textOff="6"
                android:textOn="6"
                android:textSize="@dimen/create_text_size_small" />

            <ToggleButton
                android:id="@+id/seven"
                android:layout_width="@dimen/dialog_toggle_size"
                android:layout_height="@dimen/dialog_toggle_size"
                android:background="@drawable/toggle_blue"
                android:gravity="center"
                android:singleLine="true"
                android:textOff="7"
                android:textOn="7"
                android:textSize="@dimen/create_text_size_small" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ToggleButton
                android:id="@+id/eight"
                android:layout_width="@dimen/dialog_toggle_size"
                android:layout_height="@dimen/dialog_toggle_size"
                android:background="@drawable/toggle_blue"
                android:gravity="center"
                android:singleLine="true"
                android:textOff="8"
                android:textOn="8"
                android:textSize="@dimen/create_text_size_small" />

            <ToggleButton
                android:id="@+id/nine"
                android:layout_width="@dimen/dialog_toggle_size"
                android:layout_height="@dimen/dialog_toggle_size"
                android:background="@drawable/toggle_blue"
                android:gravity="center"
                android:singleLine="true"
                android:textOff="9"
                android:textOn="9"
                android:textSize="@dimen/create_text_size_small" />

            <ToggleButton
                android:id="@+id/ten"
                android:layout_width="@dimen/dialog_toggle_size"
                android:layout_height="@dimen/dialog_toggle_size"
                android:background="@drawable/toggle_blue"
                android:gravity="center"
                android:singleLine="true"
                android:textOff="10"
                android:textOn="10"
                android:textSize="@dimen/create_text_size_small" />

            <ToggleButton
                android:id="@+id/eleven"
                android:layout_width="@dimen/dialog_toggle_size"
                android:layout_height="@dimen/dialog_toggle_size"
                android:background="@drawable/toggle_blue"
                android:gravity="center"
                android:singleLine="true"
                android:textOff="11"
                android:textOn="11"
                android:textSize="@dimen/create_text_size_small" />

            <ToggleButton
                android:id="@+id/twelve"
                android:layout_width="@dimen/dialog_toggle_size"
                android:layout_height="@dimen/dialog_toggle_size"
                android:background="@drawable/toggle_blue"
                android:gravity="center"
                android:singleLine="true"
                android:textOff="12"
                android:textOn="12"
                android:textSize="@dimen/create_text_size_small" />

            <ToggleButton
                android:id="@+id/thirteen"
                android:layout_width="@dimen/dialog_toggle_size"
                android:layout_height="@dimen/dialog_toggle_size"
                android:background="@drawable/toggle_blue"
                android:gravity="center"
                android:singleLine="true"
                android:textOff="13"
                android:textOn="13"
                android:textSize="@dimen/create_text_size_small" />

            <ToggleButton
                android:id="@+id/fourteen"
                android:layout_width="@dimen/dialog_toggle_size"
                android:layout_height="@dimen/dialog_toggle_size"
                android:background="@drawable/toggle_blue"
                android:gravity="center"
                android:singleLine="true"
                android:textOff="14"
                android:textOn="14"
                android:textSize="@dimen/create_text_size_small" />

            <ToggleButton
                android:id="@+id/fifteen"
                android:layout_width="@dimen/dialog_toggle_size"
                android:layout_height="@dimen/dialog_toggle_size"
                android:background="@drawable/toggle_blue"
                android:gravity="center"
                android:singleLine="true"
                android:textOff="15"
                android:textOn="15"
                android:textSize="@dimen/create_text_size_small" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ToggleButton
                android:id="@+id/sixteen"
                android:layout_width="@dimen/dialog_toggle_size"
                android:layout_height="@dimen/dialog_toggle_size"
                android:background="@drawable/toggle_blue"
                android:gravity="center"
                android:singleLine="true"
                android:textOff="16"
                android:textOn="16"
                android:textSize="@dimen/create_text_size_small" />

            <ToggleButton
                android:id="@+id/seventeen"
                android:layout_width="@dimen/dialog_toggle_size"
                android:layout_height="@dimen/dialog_toggle_size"
                android:background="@drawable/toggle_blue"
                android:gravity="center"
                android:singleLine="true"
                android:textOff="17"
                android:textOn="17"
                android:textSize="@dimen/create_text_size_small" />

            <ToggleButton
                android:id="@+id/eighteen"
                android:layout_width="@dimen/dialog_toggle_size"
                android:layout_height="@dimen/dialog_toggle_size"
                android:background="@drawable/toggle_blue"
                android:gravity="center"
                android:singleLine="true"
                android:textOff="18"
                android:textOn="18"
                android:textSize="@dimen/create_text_size_small" />

            <ToggleButton
                android:id="@+id/nineteen"
                android:layout_width="@dimen/dialog_toggle_size"
                android:layout_height="@dimen/dialog_toggle_size"
                android:background="@drawable/toggle_blue"
                android:gravity="center"
                android:singleLine="true"
                android:textOff="19"
                android:textOn="19"
                android:textSize="@dimen/create_text_size_small" />

            <ToggleButton
                android:id="@+id/twenty"
                android:layout_width="@dimen/dialog_toggle_size"
                android:layout_height="@dimen/dialog_toggle_size"
                android:background="@drawable/toggle_blue"
                android:gravity="center"
                android:singleLine="true"
                android:textOff="20"
                android:textOn="20"
                android:textSize="@dimen/create_text_size_small" />

            <ToggleButton
                android:id="@+id/twentyOne"
                android:layout_width="@dimen/dialog_toggle_size"
                android:layout_height="@dimen/dialog_toggle_size"
                android:background="@drawable/toggle_blue"
                android:gravity="center"
                android:singleLine="true"
                android:textOff="21"
                android:textOn="21"
                android:textSize="@dimen/create_text_size_small" />

            <ToggleButton
                android:id="@+id/twentyTwo"
                android:layout_width="@dimen/dialog_toggle_size"
                android:layout_height="@dimen/dialog_toggle_size"
                android:background="@drawable/toggle_blue"
                android:gravity="center"
                android:singleLine="true"
                android:textOff="22"
                android:textOn="22"
                android:textSize="@dimen/create_text_size_small" />

            <ToggleButton
                android:id="@+id/twentyThree"
                android:layout_width="@dimen/dialog_toggle_size"
                android:layout_height="@dimen/dialog_toggle_size"
                android:background="@drawable/toggle_blue"
                android:gravity="center"
                android:singleLine="true"
                android:textOff="23"
                android:textOn="23"
                android:textSize="@dimen/create_text_size_small" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/buttonOk"
        style="@style/Widget.AppCompat.Button.ButtonBar.AlertDialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_marginTop="14dp"
        android:clickable="false"
        android:gravity="center"
        android:text="@string/ok"
        android:textSize="18sp" />
</LinearLayout>